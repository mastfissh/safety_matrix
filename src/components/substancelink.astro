---
import { getEntryBySlug } from 'astro:content';
import { linkify } from '../util';
const { drug } = Astro.props;
let slug = linkify(drug)
const page = await getEntryBySlug('substances', slug);
let link = (!!page)
---
{link && <span> See also: <a class="font-medium text-blue-600 underline dark:text-blue-900 hover:no-underline" href={`${import.meta.env.BASE_URL}substances/` + slug}> {drug} </a> </span>}
