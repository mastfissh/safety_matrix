---
import { getEntryBySlug } from 'astro:content';
import { linkify } from '../util';
const { drug, conf } = Astro.props;
let slug = linkify(drug)
const page = await getEntryBySlug('combos', slug);
let link = (!!page)
let warn = (conf == 'Low confidence')
---
{warn && <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="h-8 w-8">
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
  </svg>}

{!link && drug}
{link && <a class="font-medium text-blue-600 underline dark:text-blue-900 hover:no-underline" href={`${import.meta.env.BASE_URL}combos/` + slug}> {drug} </a>}

